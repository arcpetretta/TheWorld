@{ 
    ViewBag.Title = "Home Page";
}

<!DOCTYPE html>
<html>
<head>
    <title>The World - @ViewBag.Title</title>
    <meta charset="utf-8" />

    <link rel="stylesheet" href="css/site.css" />
</head>
<body>
    <div id="sidebar">
        <!-- TODO: Add image for user avatar -->
        <!--<img alt="avatar" class="avatar"/>-->
        <span id="username">Arc Petretta</span>
        <ul class="menu">
            <li class="active"><a href="#">Home</a>
            <li><a href="#">About</a>
            <li><a href="#">Contact</a>
        </ul>
    </div>
    <div id="wrapper">
        <div id="main">
            <div>
                <button id="sidebarToggle">Toggle Menu</button>
            </div>
            <h1>The World</h1>
            <p>More to come in the future...</p>

            <form>
                <div>
                    <label>Date</label>
                    <input />
                </div>
                <div>
                    <label>Location</label>
                    <input />
                </div>
                <div>
                    <input type="submit" value="Add" />
                </div>
            </form>
        </div>
        <div id="footer">
            <footer>
                <p>Designed by Arcangelo Petretta</p>
                <p><a href="https://github.com/arcpetretta/TheWorld">Source Code!</a></p>
            </footer>
        </div>
    </div>

    <script type="text/javascript" src="lib/jquery/dist/jquery.min.js"></script>
    <script type="text/javascript" src="js/site.js">
    </script>
</body>
</html>